
<section class="login-wrap mtb-40">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="login-box">
                    <h1>UPDATE BLOG</h1>
                    <form action="/blog/update/<%= data._id %>" method="post"  enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="text" name="title" class="form-control" placeholder="title" value="<%= data.title %>">
                        </div>
                        <div class="form-group">
                            <textarea name="discription" class="form-control"><%= data.discription %></textarea>
                        </div>
                        <div class="form-group">
                            <input type="file" name="image" class="form-control" placeholder="image" >

                            <img src="/upload/<%= data.image %>" width="50px">


                            
                        </div>

                        <div class="form-group">
                            <button class="btn btn-primary">UPDATE</button>
                        </div>
                    </form>
                </div>         
            </div>
        </div>
    </div>
</section>