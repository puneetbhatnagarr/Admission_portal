<%- include('../partition/header.ejs') %>
<br><br>
<section class="login-wrap mtb-40">
<div class="container">
<div class=" justify-content-center">
<div class="corowl-md-6">
<div class="login-box">
<p class="section-title pr-5"><span class="pr-2">My Profile</span></p>
<%# Show All Data %>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                
                <th>NAME</th>
                <th>EMAIL</th>
                <th>PHONE</th>
                <th>COLLEGE</th>
                <th>COURSE</th>
                <th>ACTIONS</th>
            </tr>
        </thead>

        <tbody>
            <% records.forEach((item)=>{ %>
                <tr>
                    
                    <td>
                        <%= item.name %>
                    </td>
                    <td>
                        <%= item.mail %>
                    </td>
                    <td>
                        <%= item.phone %>
                    </td>
                  
                    <td>
                        <%= item.college %>
                    </td>
                    <td>
                        <%= item.course %>
                    </td>
             <td>
                        
                        <a class="btn btn-outline-primary" href="/user/edit/<%= item._id %>">Edit </a>

                    </td>
                </tr>
                <%})%> 
        </tbody>
        
    </table>
    <a class="btn btn-outline-primary" href="/home">Back To Home Page</a><br>
    
    <a href="#!" class="small text-muted">Terms of use.</a>
    <a href="#!" class="small text-muted">Privacy policy</a>



</div>
</div>
</div>
</div>
</section>

